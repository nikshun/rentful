<body>
    <%- include('../partials/header2.ejs') -%>

    <div class="card" style="padding:30px">
        <h1>Contact form</h1>
        <form action="/contact" method="post">
            <!-- Title -->
            <label class="col-form-label" for="title">Title:</label><br>
            <input class="form-control-lg" type="title" id="title" name="title">
            <br>
            <!-- Message -->
            <label class="col-form-label" for="message">Message:</label><br>
            <textarea class="form-control-lg" type="text" id="message" name="message"></textarea>
            <br>
            <input style="width:90px; margin:auto; margin-top: 30px; " class="card-link" id="submitBtn" type="submit"
                value="Send">
        </form>

    </div>

</body>


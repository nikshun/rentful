<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RENTful</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/profile.css">
    <script src="https://kit.fontawesome.com/f18b88846d.js"></script>
    <link rel="shortcut icon" href="img/favicon.png" type="image/ico" />
</head>

<body>
    <%- include('../partials/header.ejs') -%>

    <div class="card">
        <% if(user.profileImageUrl == undefined){ %>
        <form action="/profileImage" method="post" enctype="multipart/form-data">
            <label class="col-form-label" for="avatar">Choose a property picture: </label>
            <br>
            <input class="form-control-lg no-border" onchange="document.getElementById('submitBtn').click()" type="file"
                id="image" name="image" accept="image/png, image/jpeg, image/jpg">
            <input class="d-none" id="submitBtn" type="submit" value="Submit">
        </form>
        <%}else{%>
        <div id="resizer" style="background-image:
        url('<%= user.profileImageUrl %>');">
            <!-- <img class="" src="" alt="Profile image"> -->
        </div>
        <% } %>
        <div class="card-body">
            <h5 class="card-title"><%= user.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= user.email %></h6>
            <p class="card-text">Properties:</p>
            <% for(var i=0; i < properties.length ; i++) {%>
            <a class="card-text"><%= properties[i].type %> - <%= properties[i].description %>
                ($<%= properties[i].price %>)</a>
            <br>
            <% } %>
            <br>
            <a href="/profile/edit" class="card-link">Edit</a>
            <a href="/profile/delete" class="card-link">Delete profile</a>
        </div>
    </div>

</body>

</html>
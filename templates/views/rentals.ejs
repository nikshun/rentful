<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RENTful-properties</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="css/home.css">
    <script src="https://kit.fontawesome.com/f18b88846d.js"></script>
    <link rel="shortcut icon" href="img/favicon.png" type="image/ico" />
</head>

<body>
    <%- include('../partials/header.ejs') -%>
    <!-- Content -->

    <div id="content" class="container">

        <!-- Properties listings section -->
        <div id="properties">
            <!-- Filter Nav -->
            <div id="filters" class="d-none">
                <div class="filter-btn">Price<i class="fas fa-angle-down"></i></div>
                <div class="filter-btn">Avaliable</div>
                <div class="filter-btn">Filters</div>
                <div class="filter-btn">Save your search</div>
            </div>

            <!-- Properties' cards -->
            <div id="cards-container" class="container">

                <!-- Row 1 -->
                <div class="row justify-content-around">
                    <% for(var i=0; i < listings.length ; i++) {%>
                    <div class="col-md-6 col-sm-12">
                        <div class="my-card card border-light float-left" onclick="window.location.href = '/property?id=<%= listings[i]._id %>'">
                            <img class="card-img-top" src="<%= listings[i].photoUrl%>" alt="Card image cap">
                            <!-- <%= listings[i].photo %> -->
                            <div class="card-body">
                                <input type="hidden" name="id" value="<%= listings[i]._id %>">
                                <h5 class="card-title"><%= listings[i].type %></h5>
                                <input class="d-none locations" value="<%= listings[i].location %>">
                                <p class="card-text"><%= listings[i].description %></p>
                                <h6 class="prices">$<%= listings[i].price %></h6>
                                <span>/month</span>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Row 2 -->
                <div class="row justify-content-around">

                </div>


            </div>


        </div>


        <!-- Properties locations -->
        <!-- Google maps API -->
        <div id="maps">
            <input type="text" class="" id="cityName" value="<%= city %>">
            <script src="js/rentals.js"></script>
        </div>
    </div>

    <!-- GOOGLE API -->
    <script defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBTLPnqpz-cT-HDnHfW_qRp6OAmABx-wEI&callback=initMap"></script>
    

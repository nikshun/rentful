<!-- Navigation -->
<div id="top-nav">
    <div class="container">
        <div class="row">
            <!-- 3 columns -->
            <div class="col">
                <a href="/"><img src="img/logo.png" alt="Rentful Logo"></a>
            </div>

            <!-- 6 columns -->
            <div class="col float-right" id="hide-on-desktop">
                <div class="menu-wrapper float-right" onclick="toggleClass()">
                    <div class="hamburger-menu"></div>
                </div>
                <!-- Toggler -->
                <script src="/js/navbar.js"></script>
            </div>
            <div class="col-10" id="hide-on-mobile">
                <ul>
                    <li><a class="black" href="/contact">Contact</a></li>
                    <li><a class="black" href="/about">About</a></li>
                    <li>
                        <% if (typeof name === 'undefined') { %>
                        <a class="black" href="/login">Login </a>
                        <% } else{%>
                        <div class="dropdown">
                            <a id="profile-dropdown" class="black dropdown-toggle" role="button" href="#"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= name  %> </a>

                            <div id="nav-profile" class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-nav dropdown-item" href="/profile">Profile</a>
                                <a class="dropdown-nav dropdown-item" href="/logout">Log out</a>
                            </div>
                        </div>
                        <% }%>
                    </li>
                    <li><a id="my-btn" href="/publish">Publish your property</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div id="mobileNav">
    <ul>
        <li><a class="black" href="#">Contact</a></li>
        <li><a class="black" href="#">About</a></li>
